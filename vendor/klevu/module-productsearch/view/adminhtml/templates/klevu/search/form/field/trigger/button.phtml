<?php /** @var \Klevu\Search\Block\Adminhtml\Form\Field\Sync\Button $this */ ?>
<button id="<?php echo $this->getHtmlId() ?>" class="scalable" type="button">
    <span><?php echo __($this->getButtonLabel()) ?></span>
</button>
<script type="text/javascript">
    require(["prototype"], function(){
        $("<?php echo $this->getHtmlId() ?>").observe("click", function () {
            if(document.getElementById('klevu_search_developer_trigger_options_info')) {
                var triggeroptions = document.getElementById('klevu_search_developer_trigger_options_info').value;
                new Ajax.Request("<?php echo $this->getUrl('klevu_search/savetriggeroption/option'); ?>" + '?trigger_options=' + triggeroptions, {
                    method: 'POST',
                    onComplete: function(data) {
                        setLocation("<?php echo $this->getDestinationUrl() ?>");
                    }
                });
            } else {
                setLocation("<?php echo $this->getDestinationUrl() ?>");
            }
            
        });
    });
</script>
